<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Title"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:paddingLeft="20dp"
        android:text="Google+"/>
    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_below="@+id/name"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxEms="10"
        android:paddingLeft="20dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Title"
        android:layout_toRightOf="@+id/img"
        android:text="Subtitle of google"/>
    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxEms="10"
        android:paddingLeft="20dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:text="Subtitle of google"
        android:layout_below="@+id/subject"
        android:layout_alignStart="@+id/subject" />
    <ImageView
        android:id="@+id/star"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/subject"
        android:src="@drawable/star" />
    <TextView
        android:id="@+id/masg_type"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/star"
        android:layout_alignBaseline="@+id/msg"
        android:layout_height="wrap_content"
        android:text="1 new"
        android:layout_margin="5dp"
        android:background="@android:color/holo_blue_bright"/>



</RelativeLayout>
